@model pre_registration.Models.ViewModels.EditUserViewModel
<h2>Редактировать пользователя @Model.Login</h2>

<form method="post" asp-controller="Admin" asp-action="EditUser" asp-route-id="@ViewBag.UserId">

    <div>
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" />
        <span asp-validation-for="FirstName"></span>
    </div>
    <div>
        <label asp-for="LastName"></label>
        <input asp-for="LastName" />
        <span asp-validation-for="LastName"></span>
    </div>
    <div>
        <label asp-for="SecondName"></label>
        <input asp-for="SecondName" />
        <span asp-validation-for="SecondName"></span>
    </div>
    <div>
        <label asp-for="Phone"></label>
        <input asp-for="Phone" />
        <span asp-validation-for="Phone"></span>
    </div>

    <div>     
            <label asp-for="RoleId"></label>
            <select  asp-for="RoleId" asp-items='new SelectList(ViewBag.Roles, "Id", "Name", Model.RoleId)'>
            </select>
        </div>
    <div>
        <label asp-for="AreaID"></label>
        <select asp-for="AreaID" asp-items='new SelectList(ViewBag.Areas, "Id", "Name", Model.AreaID)'>
            <option disabled>Выберите район</option>     
        </select>
    </div>
    <div>
        <input type="submit" value="Сохранить" />
    </div>
</form>
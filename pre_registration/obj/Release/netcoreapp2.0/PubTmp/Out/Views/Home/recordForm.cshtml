@model pre_registration.Models.DataBaseModel.Order
    <script>
        $('.backToSelectTime').click(function () {
            $('.recordForm').hide();
            $(".selectTime").show();
            $('.selectTime').load('@Url.Action("returnToSelectTime", "Home")');
        });
        $(document).ready(setCheckOutBar());
        $(document).ready(function () {
            $(".g-recaptcha").show();

        });
    </script>


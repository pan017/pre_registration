@model pre_registration.Models.ViewModels.SetCuponIntervalViewModel
<h2 class="titleHeadRow">Добавление новых талонов для записи</h2>
<div>
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <form method="post" asp-controller="Cupon" asp-action="setCuponInterval" class="contentForm">

        @if (User.IsInRole("admin"))
        {
            <div class="contentDiv">
                <label asp-for="AreaId"></label><br />
                <select asp-for="AreaId" asp-items='new SelectList(ViewBag.Areas, "Id", "Name")' class="selectList setCuponIntervalInputItem"></select>
            </div>
        }
        <div>
            <label asp-for="beginDate"></label><br />
            <input type="date" asp-for="beginDate" class="setCuponIntervalInputItem" />
        </div>
        <div>
            <label asp-for="endDate"></label><br />
            <input type="date" asp-for="endDate"  class="setCuponIntervalInputItem" />
        </div>

        <div>
            <label asp-for="interval"></label><br />
            <input type="text" asp-for="interval" onkeyup="return checkNumberValue(this);" class="setCuponIntervalInputItem" />
        </div>
        <div class="contentDiv">
            пн<input type="checkbox" asp-for="daysOfWeek[1]" />
            вт <input type="checkbox" asp-for="daysOfWeek[2]" />
            ср<input type="checkbox" asp-for="daysOfWeek[3]" />
            чт <input type="checkbox" asp-for="daysOfWeek[4]" />
            пт <input type="checkbox" asp-for="daysOfWeek[5]" />
            сб <input type="checkbox" asp-for="daysOfWeek[6]" />
            вс <input type="checkbox" asp-for="daysOfWeek[0]" />

        </div>
        <div class="contentDiv">
            <label asp-for="beginTimeHours"></label>
            <select asp-for="beginTimeHours" asp-items='new SelectList(ViewBag.Hours)'></select>
            :
            <select asp-for="beginTimeMins" asp-items='new SelectList(ViewBag.Mins)'></select>
            <label asp-for="beginTimeMins"></label>
        </div>
        <div class="contentDiv">
            <label asp-for="endTimeHours"></label>
            <select asp-for="endTimeHours" asp-items='new SelectList(ViewBag.Hours)'></select>
            :

            <select asp-for="endTimeMins" asp-items='new SelectList(ViewBag.Mins)'></select>
            <label asp-for="endTimeMins"></label>
        </div>
        <input type="submit"  class="setCuponIntervalInputItem"  />

    </form>
</div>

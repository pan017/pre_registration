@model pre_registration.Models.LoginViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer


<div class="modal-content" style="text-align:center;">
    <div class="modal-header">
        <button class="close" data-dismiss="modal" area-hidden="true">X</button><h3>@Localizer["Header"]</h3>
    </div>

    <form method="post" asp-controller="Account" asp-action="Login"
          asp-route-returnUrl="@Model.ReturnUrl">
        <div asp-validation-summary="ModelOnly"></div>
        <div>
            <label>@Localizer["EmailAdress"]</label><br />
            <input asp-for="Login" />
            <span asp-validation-for="Login"></span>
        </div>
        <div>
            <label>@Localizer["Password"]</label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
        <div>
            <label>@Localizer["RememberMe"]</label><br />
            <input asp-for="RememberMe" />
        </div>
        <div>
            <input type="submit" value="@Localizer["LoginButton"]" />
        </div>
        <div> <a href="@Url.Action("ResetPassword", "Account")">@Localizer["ResetPassword"]</a>  </div>
    </form>
    <br />
</div>


@model pre_registration.Models.LoginViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<h2 class="titleHeadRow">@Localizer["Header"]</h2>
<div>

    <form method="post" asp-controller="Account" asp-action="Login"
          asp-route-returnUrl="@Model.ReturnUrl">
        <div asp-validation-summary="ModelOnly"></div>
        <div>
            <label>@Localizer["EmailAdress"]</label><br />
            <input asp-for="Login" />
            <span asp-validation-for="Login"></span>
        </div>
        <div>
            <label>@Localizer["Password"]</label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
        <div>
            <label>@Localizer["RememberMe"]</label><br />
            <input asp-for="RememberMe" />
        </div>
        <div>
            <input type="submit" value="@Localizer["LoginButton"]" />
        </div>
        <div> <a href="@Url.Action("ResetPassword", "Account")">@Localizer["ResetPassword"]</a>  </div>
    </form>
    <br />
</div>


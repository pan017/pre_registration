@model pre_registration.Models.LoginViewModel

<h2 class="titleHeadRow">Авторизация</h2>
<div>
    <form method="post" asp-controller="Account" asp-action="Login" class="contentForm"
          asp-route-returnUrl="@Model.ReturnUrl">
        <div asp-validation-summary="ModelOnly" class="titleHeadRow" style="text-decoration:none;"></div>
        <div>
            <label asp-for="Login"></label><br />
            <input asp-for="Login" />
            <span asp-validation-for="Login"></span>
        </div>
        <div>
            <label asp-for="Password"></label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
        <div>
            <label asp-for="RememberMe"></label>
            <input asp-for="RememberMe" />
        </div>
        <div>
            <input type="submit" value="Войти" />
        </div>
        <div>
            <div> <a href="@Url.Action("ResetPassword", "Account")">Забыли пароль?</a>  </div>
        </div>
    </form>
</div>
